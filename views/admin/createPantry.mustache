<html>
    <head>
        {{>header}}
    <link rel="stylesheet" href="/css/login.css">
    </head>
    <body>
    {{>adminNav}}
    <div class="container center-content">
        <div class="row justify-content-center form-content">
            <div class="col-md-6">
                <h1 class="text-center">{{title}}</h1>
                <h2 class="text-center">Register Pantry</h2>
                <div id="formContent">
                    <form method="POST" action="/registerPantry">
                        <div class="form-group">
                            <label for="pantry">Pantry Name</label>
                            <input type="text" class="form-control" id="pantryName" name="pantryName" placeholder="Pantry Name">
                        </div>
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" class="form-control" id="location" name="location" placeholder="Location">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
                        </div>
                        {{#errorMessage}}
                            <p>{{errorMessage}}</p>
                        {{/errorMessage}}
                        <button type="submit" class="btn btn-primary btn-block">Register Pantry</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>